{% if entities is not empty %}
	<form action="{{ path('flux_rss_list') }}" method="post">
		    
                <div class="table-overflow">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nom Site</th>
                                                <th>Lien Flux</th>
                                                <th>Catégorie Site</th>
                                                <th>Pays</th>
                                               
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for entity in entities %}
                                            <tr>
                                                <td>{{ entity.nameSite }}</td>
                                                <td>{{ entity.linkFlux }}</td>
                                                <td>{{ entity.categorySite }}</td>
                                                <td>{{ entity.pays }}</td>
                                                <td>
                                                        <a class="btn btn-info btn-small" href="{{ path('flux_rss_edit', { 'id': entity.id }) }}" title="Modifier"><i class="icon-pencil icon-white"></i>&nbsp;Modifier</a>
                                                        <a class="btn btn-danger btn-small" data-href="{{ path('flux_rss_delete', { 'id': entity.id }) }}"data-toggle="delete-confirm" data-popout="true" title="Etes-vous s&ucirc;r?" style="cursor: pointer;"><i class="icon-trash icon-white"></i>&nbsp;Supprimer</a>
                                                        
                                                        
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                </form>
        {% else %}
                <div class="well body">
                        Aucun flux rss n'est enregistré !
                </div>
{% endif %}
